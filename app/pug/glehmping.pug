                                .how-to-get-map__item-header E-mail:
                                .how-to-get-map__item-text
                                    p #[a(href="mailto:kosmosfera@parkglampov.ru") kosmosfera@parkglampov.ru]
                            .how-to-get-map__item
                                .how-to-get-map__item-header Сайт:
                                .how-to-get-map__item-text
                                    p #[a(href="//parkglampov.ru") parkglampov.ru ]
                                    p #[a(href="//vk.com/parkglampov") vk.com/parkglampov]
                            .how-to-get-map__item
                                .how-to-get-map__item-header GPS:
                                .how-to-get-map__item-text 58.155632105534, 31.095639962949
                    <script type="text/javascript" charset="utf-8" async src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Ac2450d3813beb73a45b4493c51dfc0afdbb4d07f184e3198a38290e6a7724390&amp;width=100%25&amp;height=529&amp;lang=ru_RU&amp;scroll=false"></script>
                include components/how-to-get-bottom.pug
    include components/partners.pug
